<Configuration status="WARN">
<!--  ================== APPENDERS ==================  -->
<Appenders>
<!--  Console Appender  -->
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [Thread-%t] %-5level [%C{36}].%M - %msg%n"/>
</Console>
</Appenders>
<!--  ================== LOGGERS ==================  -->
<Loggers>
<!--  Your project logs  -->
<logger name="com" level="INFO" additivity="true">
<appenderRef ref="Console"/>
</logger>
<root level="INFO">
<appenderRef ref="Console"/>
</root>
</Loggers>
</Configuration>