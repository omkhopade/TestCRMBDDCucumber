<configuration status="WARN">
<!--  ================== APPENDERS ==================  -->
<appenders>
<!--  Console Appender  -->
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [Thread-%t] %-5level %logger{36} - %msg%n"/>
</Console>
</appenders>
<!--  ================== LOGGERS ==================  -->
<loggers>
<!--  Your project logs  -->
<logger name="com" level="INFO" additivity="true">
<appenderRef ref="Console"/>
</logger>
<root level="INFO">
<appenderRef ref="Console"/>
</root>
</loggers>
</configuration>